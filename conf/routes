# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                               controllers.HomeController.getGrid()
GET     /game/isLost                    controllers.HomeController.isLost()
GET     /game/GridShipToString          controllers.HomeController.GridShipToString()
GET     /game/undo                      controllers.HomeController.undo()
GET     /game/redo                      controllers.HomeController.redo()
GET     /game/autoShips                 controllers.HomeController.autoShips()
PATCH   /game/setPlayerName/:name       controllers.HomeController.setPlayerName(name: String)
PATCH   /game/isValid/:cords            controllers.HomeController.isValid(cords: String)
PATCH   /game/load                      controllers.HomeController.load()
PATCH   /game/save                      controllers.HomeController.save()
PATCH   /game/reset                     controllers.HomeController.reset()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
